{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Simple Todo Note",
  "version": "0.1.0",
  "identifier": "com.shiho.simpletodonote",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Simple Todo Note",
        "width": 380,
        "height": 520,
        "resizable": true,
        "alwaysOnTop": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico"
    ],
    "targets": ["msi"],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    }
  }
}
